<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageViewContaLogo"
        android:layout_width="210dp"
        android:layout_height="184dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/Logo_Preta_FuelTrack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextContaNome"
        android:layout_width="326dp"
        android:layout_height="60dp"
        android:layout_marginTop="56dp"
        android:background="@drawable/edittext_background"
        android:clickable="false"
        android:cursorVisible="false"
        android:ems="10"
        android:focusable="false"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewContaLogo" />

    <EditText
        android:id="@+id/editTextNovaSenha"
        android:layout_width="326dp"
        android:layout_height="60dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/edittext_background"
        android:ems="10"
        android:hint="Digite a nova senha"
        android:inputType="textPassword"
        android:paddingStart="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewNovaSenha" />

    <EditText
        android:id="@+id/editTextConfirmarSenha"
        android:layout_width="326dp"
        android:layout_height="60dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/edittext_background"
        android:ems="10"
        android:hint="Confirme a nova senha"
        android:inputType="textPassword"
        android:paddingStart="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewConfirmarSenha" />

    <TextView
        android:id="@+id/textViewConfirmarSenha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Confirmar Senha"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/editTextConfirmarSenha"
        app:layout_constraintTop_toBottomOf="@+id/editTextNovaSenha" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button"
        android:layout_width="196dp"
        android:layout_height="56dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="56dp"
        android:text="Salvar Alterações"
        android:textStyle="bold"
        app:backgroundTint="@color/orange"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextConfirmarSenha"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textViewNovaSenha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Nova Senha"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/editTextNovaSenha"
        app:layout_constraintTop_toBottomOf="@+id/editTextContaNome" />

    <TextView
        android:id="@+id/textViewContaNome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="Nome de Usuário"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/editTextContaNome"
        app:layout_constraintStart_toStartOf="@+id/editTextContaNome" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSairDaConta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sair da Conta"
        android:textColor="@color/orange"
        app:backgroundTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button"
        app:strokeColor="@color/orange"
        app:strokeWidth="2dp">

    </com.google.android.material.button.MaterialButton>

</androidx.constraintlayout.widget.ConstraintLayout>